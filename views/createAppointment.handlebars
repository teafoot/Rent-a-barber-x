<div class="col-12 mt-3">
    <div class="card card-primary card-outline card-outline-tabs">
        <div class="card-header p-0 border-bottom-0">
            <ul class="nav nav-tabs" id="custom-tabs-four-tab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="custom-tabs-four-fields-tab" data-toggle="pill"
                        href="#custom-tabs-four-fields" role="tab" aria-controls="custom-tabs-four-fields"
                        aria-selected="true">Appointment</a>
                </li>
                <li class="nav-item">
                </li>
            </ul>
        </div>
        <div class="card-body">
            <div class="tab-content" id="custom-tabs-four-tabContent">
                <div class="tab-pane fade show active" id="custom-tabs-four-fields" role="tabpanel"
                    aria-labelledby="custom-tabs-four-fields-tab">
                    <div class="card card-primary">
                        <div class="card-header w3-dark-grey">
                            <h3 class="card-title">Create an Appointment</h3>
                        </div>
                      

                        <form id="appointementForm" action="/api/appointment/create" method="POST">
                                <div class="dateChoiceItem">
                                    <p>Date: </p>
                                </div>
                                <div class="dateChoiceItem">
                                    <input type="date" id="creationDate" name="creationDate"  min="07:00" max="19:00"required>
                                </div>
                                <div class="dateChoiceItem">
                                    <p>Time: </p>
                                </div>
                                <div class="dateChoiceItem">
                                    <input type="time" id="creationTime" name="creationTime" required>
                                </div>
                                
                                
                                
                                
                          
                                <div class="hairStyles">
                                    <div class="short">
                        
                                        <div class="hairGrid">
                                            {{#each barbershop.services}}
                                            {{!-- <fieldset id="{{id_title}}" class="appointmentFieldSet"> --}}
                                            <input class="appointmentCheck" type="checkbox" name="{{id_service}}" id="{{id_service}}" value="1" >
                                            <label for="{{id_service}}" class="men">
                                                <p>{{service_title}}</p>
                                                <p>{{service_description}}</p>
                                                <p>${{service_price}}</p>
                                            </label>
                                            {{!-- </fieldset> --}}
                                            
                                            <input type="hidden" name="id[]" value="{{id_service}}">
                                            <input type="hidden" name="price[]" value="{{service_price}}">
                                            <input type="hidden" name="title[]" value="{{service_title}}">
                                            <input type="hidden" name="description[]" value="{{service_description}}">
                                            {{/each}}
                                            <button class="dateChoiceItem" type="submit" name="submitButton">Create Appointment</button>
                                            
                                            
                                            
                                        </div>
                                    </div>
                                </div>
                            </form>
                    </div>
                </div>
            </div>