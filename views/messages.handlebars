<div class="two-columns">
  <div class="left-sidebar">
    <header class="chat-collapsible contact-list-header">
        Contact List
    </header>
    <main class="chat-content contact-list">
      {{#each data.contactList}}
      <div class="contact">
          <img src="/uploads/profile-pictures/{{{profile_image_upload}}}" />
          <div class="contact-info">
            <div data-id_user="{{{id_user}}}">
              <p class="username">{{{username}}}</p>
              <p class="last_message">{{{latestMessage}}}</p>
            </div>
            <p class="timestamp">{{latestMessageTimestamp}}</p>
          </div>
      </div>
      {{/each}}
    </main>
    <footer></footer>
  </div>
