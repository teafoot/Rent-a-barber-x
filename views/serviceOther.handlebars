<div class="row">
    <div class="col-10 offset-md-1">
        <div class="card mt-3">
            <div class="card-body">
                <form id="user_profile_form" action="/api/services/createOther" method="POST" class="form-horizontal"
                    enctype="multipart/form-data">

                    <div class="form-group row">
                        <label for="status" class="col-sm-2 col-form-label">Service Name</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="profile_status" name="profile_status"
                                placeholder="Name of the service..."
                                style="width: 50%;">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="status" class="col-sm-2 col-form-label">Service Cost</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="profile_status" name="profile_status"
                                placeholder="Cost..."
                                style="width: 50%;">
                        </div>
                    </div>
                   
                    
                    <div class="form-group row">
                        <div class="offset-sm-2 col-sm-10">
